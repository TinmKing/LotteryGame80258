<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.king_mac.lotterygame80258.LotteryIntroduction">

    <!--标题部分-->
    <RelativeLayout
        android:id="@+id/lottery_introduction_title"
        android:background="@color/lightgray"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="竞彩普及"
            android:textColor="#000"
            android:textSize="25sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/back_normal" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/lottery_introduction_title">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="竞彩规则"
            android:drawableRight="@drawable/back_normal"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="球赛分析"
            android:drawableRight="@drawable/back_normal"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="欧赔亚盘"
            android:drawableRight="@drawable/back_normal"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="盘路分析"
            android:drawableRight="@drawable/back_normal"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="套利模型"
            android:drawableRight="@drawable/back_normal"/>
    </LinearLayout>
</RelativeLayout>
